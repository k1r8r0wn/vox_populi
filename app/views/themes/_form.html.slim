  label: t('.choose_city'),
  include_blank: false,
  autofocus: true,
  input_html: { 'data-title' => t('.current_city'),
                'data-toggle' => 'tooltip',
                'data-placement' => 'top',
                class: 'blue-tooltip' }
= t.input :title
= t.input :content, as: :text, input_html: { rows: 5 }
